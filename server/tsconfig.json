{
    "compileOnSave": false,
    "include": [
        "src/**/*",
    ],
    "exclude": [
        "node_modules",
        "components/**/node_modules",
    ],
    "compilerOptions": {
        "esModuleInterop": true,
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*",
            ],
            "@infra/*": ["node_modules/js.infrastructure/lib/*"]
        },
        "resolveJsonModule": true,
        "sourceMap": true,
        "strict": true,
        "declaration": true
    }
}